<%= form_tag :method => :post, :controller => 'pages', :action => 'home' do %>
        <%= text_field_tag 'word', @word, :size => '30' %> 
        <%= submit_tag "Search"%>
<% end %>

<% if signed_in? %>
        <table class="front" summary="For signed-in users">
                <tr>
                        <td class="main">
                                <h1 class="micropost">Post your Message here!</h1>
                                <%= render 'shared/micropost_form' %>
                                <%= render 'shared/feed' %>
                        </td>

                </tr>
        </table>
<% else %>
        <h1>LiveBook</h1>
        <p>
        </p>
        <%= render 'shared/feed' , :collection => @feed_items %>
        <%= link_to "Sign up now!", signup_path, :class => 'menu_button' %>
<% end %>
